{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Places to go and avoid.</h1>

    <h2>Places to go:</h2>
    <ul>
        {% for placeGo in places.go %}
            <li>{{ placeGo.venue.name }}</li>
        {% endfor %}
    </ul>

    <h2>Places to avoid:</h2>
    <ul>
        {% for placeAvoid in places.avoid %}
            <li>
                {{ placeAvoid.venue.name }}
                <ul>
                    {% for reason in placeAvoid.reasons %}
                        <li>There is nothing for {{ reason.user.name }} to {{ reason.type }}</li>
                    {% endfor %}
                </ul>
            </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
